{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc 활성 파일 빌드",
            "command": "/usr/bin/clang",
            "args": [
                "-g",
                "main.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I.",
                "-L.",
                "-lftprintf"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "디버거에서 생성된 작업입니다."
        }
    ],
    "version": "2.0.0"
}